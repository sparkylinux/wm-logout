#!/bin/bash

# Log Out action script for tiny window managers.
# It works with any window manager and systemd.
# Copyrigt Pawe≈Ç "pavroo" Pijanowski 2013-2019 under GNU GPLv3 license
# Last update 2019/09/19

# get default's locale file
DEFLOCDIR="/usr/share/sparky/wm-logout"
if [ "`cat /etc/default/locale | grep de`" != "" ]; then
. $DEFLOCDIR/de
elif [ "`cat /etc/default/locale | grep es`" != "" ]; then
. $DEFLOCDIR/es
elif [ "`cat /etc/default/locale | grep fr`" != "" ]; then
. $DEFLOCDIR/fr
elif [ "`cat /etc/default/locale | grep hu`" != "" ]; then
. $DEFLOCDIR/hu
elif [ "`cat /etc/default/locale | grep id_ID`" != "" ]; then
. $DEFLOCDIR/id_ID
elif [ "`cat /etc/default/locale | grep it`" != "" ]; then
. $DEFLOCDIR/it
elif [ "`cat /etc/default/locale | grep ja_JP`" != "" ]; then
. $DEFLOCDIR/ja
elif [ "`cat /etc/default/locale | grep pl`" != "" ]; then
. $DEFLOCDIR/pl
elif [ "`cat /etc/default/locale | grep pt_BR`" != "" ]; then
. $DEFLOCDIR/pt_BR
elif [ "`cat /etc/default/locale | grep pt_PT`" != "" ]; then
. $DEFLOCDIR/pt_PT
elif [ "`cat /etc/default/locale | grep ru`" != "" ]; then
. $DEFLOCDIR/ru
elif [ "`cat /etc/default/locale | grep sv_SE`" != "" ]; then
. $DEFLOCDIR/se
else
. $DEFLOCDIR/en
fi

DIALOG="yad --form --width=330 --center --undecorated --skip-taskbar --borders=20 --on-top"
LOGO="--image=/usr/share/pixmaps/sparky-logo-clear0.png --image-on-top"
FONT="font_weight='bold'"
FIELD="--field="
BUTTON="--button="Cancel!gtk-cancel":1 --buttons-layout=center"
ARCHARM="`uname -m | grep arm`"
TESTLIVE=`grep "live" /etc/passwd`
TESTVIRTUAL=`grep "hypervisor" /proc/cpuinfo`

if [ "$ARCHARM" != "" ] || [ "$TESTLIVE" != "" ] || [ "$TESTVIRTUAL" != "" ]; then
	
$DIALOG $LOGO \
$FIELD"$LOCAL4!system-logout":fbtn "loginctl terminate-session $XDG_SESSION_ID" \
$FIELD"$LOCAL8!system-reboot":fbtn "systemctl reboot" \
$FIELD"$LOCAL9!system-shutdown":fbtn "systemctl poweroff" \
$BUTTON

else

$DIALOG $LOGO \
$FIELD"$LOCAL4!system-logout":fbtn "loginctl terminate-session $XDG_SESSION_ID" \
$FIELD"$LOCAL5!system-suspend":fbtn "systemctl suspend" \
$FIELD"$LOCAL6!system-suspend-hibernate":fbtn "systemctl hibernate" \
$FIELD"$LOCAL8!system-reboot":fbtn "systemctl reboot" \
$FIELD"$LOCAL9!system-shutdown":fbtn "systemctl poweroff" \
$BUTTON

fi

exit 0
